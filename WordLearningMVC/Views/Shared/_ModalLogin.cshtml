@model WordLearningMVC.Models.LoginModel

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
     <div class="modal fade" id="modalLogin"  tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
         <div class="modal-dialog" style="width: 300px">
             <div class="modal-content"  >
                 <div class="modal-header">
                     <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                     <h2 class="modal-title">@Resources.Resources.txtLogin</h2>
                 </div>
                 <div class="modal-body">
                     @Html.ValidationSummary(true)


                         <div class="form-group">
                             @Html.Label(Resources.Resources.txtLogin)
                         </div>

                         <div class="form-group">
                             @Html.EditorFor(model => model.UserName, new { style = "width:200px",@class = "form-control has-error" })
                             @Html.ValidationMessageFor(model => model.UserName)
                         </div>

                         <div class="form-group">
                             @Html.Label(Resources.Resources.txtPassword)
                         </div>

                         <div class="form-group">
                             @Html.EditorFor(model => model.Password, new { width = "120px", @class = "form-control has-error" })
                             @Html.ValidationMessageFor(model => model.Password)
                         </div>

                         <div class="form-group">
                             @Html.Label(Resources.Resources.txtRememberMe)
                         </div>
                         <div class="form-group">
                             @Html.EditorFor(model => model.RememberMe)
                             @Html.ValidationMessageFor(model => model.RememberMe)
                         </div>
                     <div class="modal-footer">
                         <button type="submit" class="btn btn-primary">@Resources.Resources.txtLogin</button>
                         <button type="button" id="close" class="btn btn-primary" data-dismiss="modal" >@Resources.Resources.txtClose</button>
                     </div>
                 </div>
             </div>
         </div>
     </div>
 }






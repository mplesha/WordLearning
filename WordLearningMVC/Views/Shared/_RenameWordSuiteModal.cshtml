

@using (Html.BeginForm("RenameWordSuite", "Student"))
{
    
    <div class="modal fade" id="RenameWordSuiteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" style="width: 360px">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h2 class="modal-title" align="center">@Resources.Resources.txtRenameWordSuite</h2>
                </div>
                <div class="modal-body">
                    @Html.TextBox("newWordSuiteName")
                    <input type="hidden" id="wordsuiteid" name="wordSuiteId"/>
                    <input type="hidden" name="currentPage" value="@Model.PageNumber" />
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">
                        @Resources.Resources.txtRename
                    </button>
                    <button type="button" id="close" class="btn btn-primary" data-dismiss="modal">@Resources.Resources.txtClose</button>
                </div>
            </div>
        </div>
    </div>

    
}
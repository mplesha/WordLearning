@model WordLearningMVC.Models.DictionaryModel
<div class="modal fade" id="ModalAddedItems" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="width: 80%">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h2 class="modal-title">@Resources.Resources.txtImportedItems</h2>
            </div>
            <div class="modal-body">
                    
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>@Resources.Resources.txtWord
                            </th>
                            <th>@Resources.Resources.txtTranslation
                            </th>
                            <th>@Resources.Resources.txtPartOfSpeech
                            </th>
                            <th>@Resources.Resources.txtTranscription
                            </th>
                            <th>@Resources.Resources.txtTags
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.AddedTranslations != null)
                        {
                            foreach (var item in Model.AddedTranslations)
                            {
                                <tr>
                                    <td>@item.OriginalItem.Word</td>
                                    <td>@item.TranslationItem.Word</td>
                                    <td>@(item.PartOfSpeach.ToString() ?? "")</td>
                                    <td>@(item.OriginalItem.Transcription ?? "")</td>
                                    <td>
                                        <ul>
                                            @foreach (var tag in item.WordType)
                                            {
                                                <li>@tag.Name</li>
                                            }
                                        </ul>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Resources.txtClose</button>
                </div>
            </div>
        </div>
    </div>
</div>
 


